<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.tacoma.uw.udeal">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="inbox.InboxListActivity"
            android:label="@string/title_inbox_list"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name="inbox.InboxDetailActivity"
            android:label="@string/title_inbox_detail"
            android:parentActivityName="inbox.InboxListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="inbox.InboxListActivity" />
        </activity>
        <activity android:name=".Login" />
        <activity android:name=".AddNewUser" />
        <activity android:name=".Home" />
        <activity
            android:name=".SplashScreen"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>