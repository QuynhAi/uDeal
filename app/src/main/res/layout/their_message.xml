<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:paddingLeft="5dp"
    android:paddingRight="60dp"
    android:clipToPadding="false">

    <View
        android:id="@+id/their_chat_avatar"
        android:layout_alignParentLeft="true"
        android:scaleType="centerInside"
        android:background="@drawable/ic_person_black_24dp"
        android:layout_width="34dp"
        android:layout_height="34dp" />

    <TextView
        android:id="@+id/their_chat_name"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/their_chat_avatar"
        android:layout_alignTop="@+id/their_chat_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:text="Ai Nguyen"/>

    <TextView
        android:id="@+id/their_chat_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/their_chat_name"
        android:layout_alignLeft="@+id/their_chat_name"
        android:background="@drawable/incoming_chat_bubble"
        android:elevation="2dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:text="The bicycle is $4000"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />
</RelativeLayout>
